{
  "name": "@app/backend",
  "version": "1.0.0",
  "description": "WebSocket server that terminates when client disconnects",
  "main": "dist/server.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "clean": "rm -rf dist node_modules",
    "START:PROD": "----------------------------------------------------------------------",
    "start:prod:with:front:server": "NODE_ENV=production-frontend-server node dist/server.js",
    "build:start:prod:with:front:server": "npm run build && npm run start:prod:with:front:server",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build:start:prod": "npm run build && npm run start:prod"
  },
  "keywords": [
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@app/shared": "*",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/ws": "^8.5.8",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}