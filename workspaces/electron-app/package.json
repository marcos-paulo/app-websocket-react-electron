{
  "name": "@websocket-app/electron-app",
  "version": "1.0.0",
  "description": "Electron app for WebSocket application",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && electron .",
    "start": "NODE_ENV=production electron .",
    "start:prod": "npm run build && NODE_ENV=production electron .",
    "watch": "tsc --watch",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@websocket-app/shared-types": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "com.websocketapp.electron",
    "productName": "WebSocket App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "../frontend-redux/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend-redux/dist",
        "to": "frontend-redux/dist"
      }
    ],
    "linux": {
      "target": "AppImage"
    }
  }
}