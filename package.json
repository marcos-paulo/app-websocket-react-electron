{
  "name": "websocket-app-monorepo",
  "version": "1.0.0",
  "description": "Monorepo da aplicação WebSocket com React e TypeScript",
  "private": true,
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:shared": "npm run build --workspace=@websocket-app/shared-types",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:electron": "npm run build --workspace=@websocket-app/electron-app",
    "build:all": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:electron",
    "dev:shared": "npm run dev:watch --workspace=@websocket-app/shared-types",
    "dev:backend": "wait-on workspaces/shared-types/dist/index.js && npm run dev --workspace=backend",
    "dev:frontend": "wait-on tcp:8080 && npm run dev --workspace=frontend",
    "dev:electron": "wait-on tcp:3001 && npm run dev --workspace=@websocket-app/electron-app",
    "dev:all": "concurrently --names \"SHARED,BACKEND,FRONTEND\" --prefix-colors \"cyan,green,blue\" --kill-others \"npm:dev:shared\" \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:with-electron": "concurrently --names \"SHARED,BACKEND,FRONTEND,ELECTRON\" --prefix-colors \"cyan,green,blue,magenta\" --kill-others \"npm:dev:shared\" \"npm:dev:backend\" \"npm:dev:frontend\" \"npm:dev:electron\"",
    "start:backend": "npm start --workspace=backend",
    "start:electron": "wait-on tcp:8080 && npm start --workspace=@websocket-app/electron-app",
    "start:electron:prod": "npm run start:prod --workspace=@websocket-app/electron-app",
    "start:prod": "npm run build:all && npm run start:backend",
    "start:prod:electron": "concurrently --names \"BACKEND,ELECTRON\" --prefix-colors \"green,magenta\" --kill-others \"npm:start:backend\" \"npm:start:electron:prod\"",
    "package:electron": "npm run package --workspace=@websocket-app/electron-app",
    "clean": "npm run clean --workspace=@websocket-app/shared-types && rm -rf backend/dist frontend/dist electron-app/dist backend/node_modules frontend/node_modules electron-app/node_modules shared-types/node_modules node_modules",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend"
  },
  "keywords": [
    "websocket",
    "react",
    "typescript",
    "monorepo",
    "npm-workspaces"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^9.0.3"
  }
}